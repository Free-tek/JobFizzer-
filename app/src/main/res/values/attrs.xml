<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleWithArcProgress">
        <attr name="radius1" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="arcColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ColorfulProgress">
        <attr name="circleColor1" format="color"/>
        <attr name="circleColor2" format="color"/>
        <attr name="circleColor3" format="color"/>
        <attr name="circleColor4" format="color"/>
    </declare-styleable>

    <declare-styleable name="DoubleArcProgress">
        <attr name="insideArcRadius" format="dimension"/>
        <attr name="outsideArcRadius" format="dimension"/>
        <attr name="insideArcColor" format="color"/>
        <attr name="outsideArcColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SimpleArcProgress">
        <attr name="arcRadius" format="dimension"/>
        <attr name="colorofArc" format="color"/>
    </declare-styleable>

    <declare-styleable name="StaticCircleProgress">
        <attr name="innerCircleRadius" format="dimension"/>
        <attr name="innerCircleColor" format="color"/>
        <attr name="movingArcRadius" format="dimension"/>
        <attr name="movinArcColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RippleBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
    </declare-styleable>
        <declare-styleable name="CircleImageView">
            <attr name="civ_border_width" format="dimension" />
            <attr name="civ_border_color" format="color" />
            <attr name="civ_border_overlay" format="boolean" />
            <attr name="civ_fill_color" format="color" />
            <attr name="civ_circle_background_color" format="color" />
        </declare-styleable>


</resources>